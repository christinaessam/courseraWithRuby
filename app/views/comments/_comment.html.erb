<%= div_for(comment) do  %>

    <div class="container" style="background-color: #FFFF99">
      <h3><%= h(comment.content) %></h3>
      <h4 align="right">
        Posted <%= time_ago_in_words(comment.created_at) %>
      </h4><br>

      <% if current_user.id ==  comment.user_id %>
          <%= link_to 'Edit', edit_lecture_comment_path(comment.lecture,comment),class:"btn btn-warning" %> |
          <%= link_to 'Delete', lecture_comment_path(comment.lecture,comment), method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %>
      <% end %>
    </div>
    <div style="height: 10px;">

    </div>
<% end %>
